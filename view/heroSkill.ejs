<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/4766/4766834.png" type="image/x-icon">
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- popins google font  -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

  <!-- font fontawesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    * {
      font-family: 'Poppins', sans-serif;
    }
  </style>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Mobile Legend</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Dea Course</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/hero">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/skill">Skill</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Dropdown
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container py-4">
    <div class="d-flex my-4">
      <a href="/skill/create" class="btn btn-outline-primary "><i class="far fa-plus"></i></a>
      <h3 class="ms-auto">
        <%= skills.title %>
      </h3>
    </div>
          <table class="table table-striped table-hover table-bordered my-4">
            <caption><%= skills.title %></caption>
            <thead class="text-center">
              <tr class="table-danger">
                <th scope="col">No</th>
                <th scope="col">Name Hero</th>
                <th scope="col">Skill 1</th>
                <th scope="col">Skill 2</th>
                <th scope="col">Skill 3</th>
                <th scope="col">Skill Pasif</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody class="text-sm-center">
              <% for(let i=0; i<skills.data.length; i++){ %>
              <tr>
                <th scope="row">
                  <%= i+1 %>
                </th>
                <td class=" align-top">
                  <%= skills.data[i].hero %>
                </td>
                <td>
                  <p class="fs-6 text-wrap" style="width:7rem ;"><%= skills.data[i].skill1 %></p>
                </td>
                <td>
                  <p class="fs-6 text-wrap" style="width:7rem ;"><%= skills.data[i].skill2 %></p>
                </td>
                <td >
                  <p class="fs-6 text-wrap" style="width:7rem ;"><%= skills.data[i].skill3 %></p>
                </td>
                <td >
                  <p class="fs-6 text-wrap" style="width:7rem ;"><%= skills.data[i].skillPasif %></p>
                </td>
                <td>
                    <a class='btn btn-outline-warning btn-sm ' href="/skill/<%= skills.data[i].id %>"><i
                      class="fa-solid fa-pen-to-square" ></i></a>
                    <a class="btn btn-outline-danger btn-sm" onclick="confir(`<%= skills.data[i].id %>`)"><i
                      class="fa-solid fa-trash-can"></i></a>
                </td>
              </tr>
              <%} %>
            </tbody>
          </table>
  </div>

  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.14/dist/sweetalert2.all.min.js"></script>

  <script>
    function confir(id) {
      Swal.fire({
        title: 'Are you sure?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes'
      }).then((result) => {
        if (result.isConfirmed) {
          Swal.fire('Saved!', '', 'success')
          window.location = '/skill/remove/' + id;
        }
      })
    }
  </script>


</body>

</html>


